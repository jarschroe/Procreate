<Window x:Class="Procreate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Procreate" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="116*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="221"/>
        </Grid.ColumnDefinitions>
        <Canvas HorizontalAlignment="Left" Height="647" VerticalAlignment="Top" Width="635" Grid.Row="1" Margin="10,10,0,0"/>
        <TabControl Grid.Column="3" HorizontalAlignment="Left" Height="659" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="200">
            <TabItem Header="Method">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="GameObject">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,8"/>
            </TabItem>
            <TabItem Header="LevelObject">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="1016" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Column="1" HorizontalAlignment="Left" Height="620" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
        <Button Content="Generate" Grid.Column="1" HorizontalAlignment="Left" Margin="35,635,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
